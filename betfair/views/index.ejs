    <div class="container">

      <h1>Betfair</h1>
      <hr>
      <div class="row">
        <div class="col-md-8">

          <div id="summary" style="font-weight:bold">{ Account details }</div>
          <div id="funds" style="color:red;"> { Balance }</div>   

          <div class="row">
            <div id="events" class="col-md-4">{ Events }</div>
            <div id="socerevents" class="col-md-4">{ Socer Events }</div>
            <div id="soceringame" class="col-md-4">{ Socer Currently Played }</div>
