        </div>
        <div id="setbet" class="col-md-4"></div>
      </div>

      <hr>
        <div id="currency">{ Currency }</div>
      <hr>

    </div> <!-- /container -->
<script>

  $(document).ready( function() {
    getAccountDetails();
    getCurrencies();
    // gettMarketCatalogueList();
    getEventTypesList();
    getSoccerEventsList();
    getSoccerInGameEventsList()
    getFunds();
    setBet();
});

// FAKE FUNCTION
function setBet() {
  var bet = "<p>Conditions are met, set bet 10.00 GBP<br>Response: <span style='color:red;'>[ERROR]</span></p>";
  for (var i = 1; i <= 20; i++) {
    (function(index) {
        setTimeout(function() { $('#setbet').append(bet); }, i * 3000);
    })(i);
  }
}

</script>
 <script src="/assets/js/account.js"></script>
 <script src="/assets/js/bets.js"></script>
