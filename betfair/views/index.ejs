// FAKE FUNCTION
function setBet() {
  var bet = "<p>Conditions are met, set bet 10.00 GBP<br>Response: <span style='color:red;'>[ERROR]</span></p>";
  for (var i = 1; i <= 20; i++) {
    (function(index) {
        setTimeout(function() { $('#setbet').append(bet); }, i * 3000);
    })(i);
  }
}

